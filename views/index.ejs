<%- include('./partials/header')%>    

<% if(error.length>0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
    <% } %>
<div class="w-full h-screen flex px-20">
    <div class="w-1/2 h-screen flex justify-center items-center">
        <div class="w-full px-10">
            <h3 class="text-4xl mb-10">Welcome to <span class="text-blue-400 font-semibold">Scatch</span></h3>
            <h4 class="text-2xl mb-5">Create Your Account</h4>
            <form action="/users/register" autocomplete="off" method="post">
                <input type="text" class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 placeholder:text-zinc-500" name="fullname" placeholder="Full Name">
                <input type="email" class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 placeholder:text-zinc-500" name="email" placeholder="Email">
                <input type="password" class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 placeholder:text-zinc-500" name="password" placeholder="Password">
                <input type="submit" class="px-5 rounded-full py-2 mt-2 bg-blue-500 text-white cursor-pointer hover:bg-blue-600" value="Create My Account">
            </form>
        </div>
    </div>
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-10">
            <h4 class="text-2xl capitalize mb-5">login your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input class="px-10 block rounded-full py-2 mt-2 bg-blue-500 text-white hover:bg-blue-600 cursor-pointer" type="submit"
                    value="Login">
            </form>
        </div>
    </div>
</div>
</div>

<%- include('./partials/footer')%>    